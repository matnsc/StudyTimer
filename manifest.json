{
	"manifest_version": 2,
	"name": "StudyTimer",
	"version": "2.1",
	"description": "StudyTimer is a browser extension created to help you manage your studies and tasks using the Pomodoro Technique",
	"icons": 
	{
		"96": "icons/logo.png"
	},
	"background": 
	{
		"scripts": [ 
			"model/badge.js", 
			"model/notification.js", 
			"model/timerFormat.js", 
			"model/settings/userSettings.js", 
			"model/settings/userSettingsStorage.js", 
			"model/timers/timer.js", 
			"model/timers/studyTimer.js", 
			"model/timers/shortBreakTimer.js", 
			"model/timers/longBreakTimer.js", 
			"script/background.js"
		]
	},
	"browser_action": {
		"default_icon": {
			"96": "icons/logo.png"
		},
		"default_title": "StudyTimer",
		"default_popup": "popup/popup.html"
	},
	"permissions": [ "notifications", "storage" ]
}